{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@client/*": ["./client/*"],
      "@server/*": ["./server/*"],
      "@shared/*": ["./shared/*"],
      "@ioc/*": ["./shared/ioc/*"],
    },
    "noImplicitAny": false
  },
  "include": [
    "./**/*.ts",
  ],
  "references": [
    { "path": "./client/tsconfig.json", },
    { "path": "./server/tsconfig.json", },
    { "path": "./shared/tsconfig.json", },
  ]
}