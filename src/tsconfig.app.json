{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@ioc": ["./ioc/index.ts"],
      "@config/*": ["./config/*"],
      "@client/*": ["./client/*"],
      "@server/*": ["./server/*"],
      "@contexts/*": ["./contexts/*"],
      "@shared/*": ["./contexts/shared/*"],
    },
    "noImplicitAny": false
  },
  "include": [
    "./**/*.ts",
  ],
  "references": [
    { "path": "./client/tsconfig.json", },
    { "path": "./server/tsconfig.json", }
  ]
}